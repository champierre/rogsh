{
  "name": "rogsh",
  "version": "0.2.1",
  "description": "Unix command-line learning roguelike game",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "rogsh": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsx src/index.ts --dev",
    "dev:watch": "tsx watch src/index.ts --dev",
    "dev:zone1": "tsx src/index.ts --dev --start-zone=zone1",
    "dev:zone2": "tsx src/index.ts --dev --start-zone=zone2",
    "dev:zone3": "tsx src/index.ts --dev --start-zone=zone3",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": ["roguelike", "unix", "educational", "cli", "game"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
